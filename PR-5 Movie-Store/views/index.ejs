<%- include('partials/header') %>

    <!-- ================= ADD MOVIE ================= -->
    <div class="row justify-content-center mb-5">
        <div class="col-lg-8">
            <div class="glass-card">
                <h3 class="mb-4">üé¨ Add New Movie</h3>

                <form action="/add-movie" method="post" enctype="multipart/form-data" class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">Title</label>
                        <input class="form-control" type="text" name="title" required>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Director</label>
                        <input class="form-control" type="text" name="director" required>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Release Date</label>
                        <input class="form-control" type="date" name="releaseDate">
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Rating</label>
                        <input class="form-control" type="number" step="0.1" min="0" max="10" name="rating">
                    </div>

                    <div class="col-12">
                        <label class="form-label">Poster</label>
                        <input class="form-control" type="file" name="poster" accept="image/*">
                    </div>

                    <div class="col-12">
                        <label class="form-label">Description</label>
                        <textarea class="form-control" name="description" rows="3"></textarea>
                    </div>

                    <div class="col-12 text-end">
                        <button class="btn btn-accent">Add Movie</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- ================= SEARCH & SORT ================= -->
    <div class="glass-card mb-4">
        <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
            <span>Total Movies:
                <strong>
                    <%= typeof count !=='undefined' ? count : (movies ? movies.length : 0) %>
                </strong>
            </span>

            <form method="get" class="search-bar">
                <input type="search" name="q" class="form-control search-input"
                    placeholder="Search title or director..."
                    value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>">

                <select name="sort" class="form-select" onchange="this.form.submit()">
                    <option value="">Sort</option>

                    <option value="title-asc" <%= typeof sortOption !== 'undefined' && sortOption === 'title-asc' ? 'selected' : '' %>>
                        Title A-Z
                    </option>

                    <option value="release-newest" <%= typeof sortOption !== 'undefined' && sortOption === 'release-newest' ? 'selected' : '' %>>
                        Newest
                    </option>

                    <option value="release-oldest" <%= typeof sortOption !== 'undefined' && sortOption === 'release-oldest' ? 'selected' : '' %>>
                        Oldest
                    </option>

                    <option value="rating-high" <%= typeof sortOption !== 'undefined' && sortOption === 'rating-high' ? 'selected' : '' %>>
                        Rating High
                    </option>

                    <option value="rating-low" <%= typeof sortOption !== 'undefined' && sortOption === 'rating-low' ? 'selected' : '' %>>
                        Rating Low
                    </option>
                </select>

            </form>
        </div>
    </div>

    <!-- ================= MOVIE GRID ================= -->
    <div class="row g-4 justify-content-center">
        <% movies.forEach(movie=> { %>
            <div class="col-sm-12 col-md-6 col-lg-4">
                <div class="movie-card h-100">

                    <% if (movie.poster) { %>
                        <img src="/uploads/<%= movie.poster %>" class="movie-poster" alt="<%= movie.title %>">
                        <% } else { %>
                            <div class="movie-poster d-flex align-items-center justify-content-center text-muted">
                                No Poster
                            </div>
                            <% } %>

                                <div class="p-3">
                                    <h6 class="text-truncate" title="<%= movie.title %>">
                                        <%= movie.title %>
                                    </h6>

                                    <small class="text-white d-block mb-2">
                                        <%= movie.director %>
                                    </small>

                                    <div class="d-flex justify-content-between align-items-center">
                                        <% if (movie.rating) { %>
                                            <span class="rating-badge">
                                                ‚≠ê <%= parseFloat(movie.rating).toFixed(1) %>
                                            </span>
                                            <% } else { %>
                                                <span class="text-muted">N/A</span>
                                                <% } %>

                                                    <div class="d-flex gap-2">
                                                        <a href="/edit-movie/<%= movie.id %>"
                                                            class="btn btn-sm btn-outline-primary">Edit</a>
                                                        <a href="/delete-movie/<%= movie.id %>"
                                                            class="btn btn-sm btn-outline-danger">Delete</a>
                                                    </div>
                                    </div>
                                </div>

                </div>
            </div>
            <% }) %>
    </div>

    <!-- ================= EMPTY STATE ================= -->
    <% if (!movies || movies.length===0) { %>
        <div class="text-center text-muted py-5">
            No movies found. Add your first movie.
        </div>
        <% } %>

            <!-- ================= PAGINATION ================= -->
            <% if (typeof totalPages !=='undefined' && totalPages> 1) { %>
                <nav class="mt-5">
                    <ul class="pagination justify-content-center">
                        <li class="page-item <%= currentPage == 1 ? 'disabled' : '' %>">
                            <a class="page-link"
                                href="/?page=<%= currentPage - 1 %><%= searchQuery ? '&q=' + searchQuery : '' %><%= sortOption ? '&sort=' + sortOption : '' %>">
                                Previous
                            </a>
                        </li>

                        <% for (let i=1; i <=totalPages; i++) { %>
                            <li class="page-item <%= currentPage == i ? 'active' : '' %>">
                                <a class="page-link"
                                    href="/?page=<%= i %><%= searchQuery ? '&q=' + searchQuery : '' %><%= sortOption ? '&sort=' + sortOption : '' %>">
                                    <%= i %>
                                </a>
                            </li>
                            <% } %>

                                <li class="page-item <%= currentPage == totalPages ? 'disabled' : '' %>">
                                    <a class="page-link"
                                        href="/?page=<%= currentPage + 1 %><%= searchQuery ? '&q=' + searchQuery : '' %><%= sortOption ? '&sort=' + sortOption : '' %>">
                                        Next
                                    </a>
                                </li>
                    </ul>
                </nav>
                <% } %>

                    <%- include('partials/footer') %>