<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Movie Store</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        :root {
            --bg-dark: #0b1020;
            --bg-glass: rgba(15, 23, 42, 0.75);
            --primary: #6366f1;
            --accent: #22d3ee;
            --text: #e5e7eb;
            --muted: #9ca3af;
            --border: rgba(255, 255, 255, 0.08);
        }

        /* Body base */
        body {
            background: radial-gradient(circle at top, #111827, #020617);
            color: var(--text);
            font-family: system-ui, -apple-system, Segoe UI, Roboto, sans-serif;
        }

        /* Navbar */
        .navbar {
            background: linear-gradient(135deg,
                    rgba(15, 23, 42, 0.9),
                    rgba(2, 6, 23, 0.9)) !important;
            backdrop-filter: blur(12px);
            border-bottom: 1px solid var(--border);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.4);
        }

        /* Brand */
        .navbar-brand {
            display: flex;
            align-items: center;
            gap: 10px;
            position: relative;
        }

        .navbar-brand span {
            font-weight: 700;
            font-size: 18px;
            color: #fff;
        }

        /* Animated underline */
        .navbar-brand::after {
            content: "";
            position: absolute;
            left: 42px;
            bottom: -6px;
            width: 0;
            height: 3px;
            background: linear-gradient(90deg, var(--primary), var(--accent));
            transition: width 0.3s ease;
            border-radius: 2px;
        }

        .navbar-brand:hover::after {
            width: 110px;
        }

        /* Nav button */
        .navbar .btn-outline-primary {
            border-color: var(--primary);
            color: var(--primary);
            border-radius: 999px;
            padding: 8px 18px;
            transition: all 0.3s ease;
        }

        .navbar .btn-outline-primary:hover {
            background: var(--primary);
            color: #fff;
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(99, 102, 241, 0.4);
        }
    </style>

    <style>
        /* ADD MOVIE CARD */
        .card-custom {
            background: linear-gradient(180deg,
                    rgba(30, 41, 59, 0.85),
                    rgba(15, 23, 42, 0.85));
            backdrop-filter: blur(14px);
            border-radius: 16px;
            border: 1px solid var(--border);
            box-shadow: 0 30px 60px rgba(0, 0, 0, 0.5);
            position: relative;
            overflow: hidden;
        }

        /* SEARCH BAR */
        .search-input {
            background: rgba(2, 6, 23, 0.7);
            border-radius: 999px;
            border: 1px solid rgba(255, 255, 255, 0.12);
            color: #fff;
        }

        /* MOVIE GRID */
        .movie-item .card {
            background: rgba(2, 6, 23, 0.85);
            border-radius: 14px;
            transition: all 0.35s ease;
        }

        .movie-item .card:hover {
            transform: translateY(-10px);
            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.6);
        }

        /* PAGINATION */
        .page-link {
            background: rgba(2, 6, 23, 0.8);
            border: 1px solid var(--border);
            color: #fff;
        }

        /* ===================== EDIT FORM SPECIFIC ===================== */

        /* Card for edit movie */
        .card-custom {
            background: linear-gradient(180deg,
                    rgba(30, 41, 59, 0.85),
                    rgba(15, 23, 42, 0.85));
            backdrop-filter: blur(14px);
            border-radius: 16px;
            border: 1px solid var(--border);
            box-shadow: 0 30px 60px rgba(0, 0, 0, 0.5);
            padding: 20px;
            transition: all 0.4s ease;
        }

        .card-custom:hover {
            transform: translateY(-10px) scale(1.01);
            box-shadow: 0 35px 70px rgba(0, 0, 0, 0.6);
        }

        /* Form inputs */
        .form-control,
        .form-select,
        textarea {
            border-radius: 12px;
            border: 1px solid rgba(255, 255, 255, 0.12);
            background: rgba(2, 6, 23, 0.7);
            color: #fff;
            padding: 12px 16px;
            transition: all 0.3s ease;
        }

        .form-control:focus,
        .form-select:focus,
        textarea:focus {
            border-color: var(--primary);
            box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.2);
            background: rgba(2, 6, 23, 0.85);
        }

        /* Labels */
        .form-label {
            color: var(--accent);
            font-weight: 600;
            font-size: 14px;
        }

        /* Buttons */
        .btn-accent {
            background: linear-gradient(135deg, var(--primary), var(--accent));
            color: #fff;
            box-shadow: 0 10px 20px rgba(99, 102, 241, 0.4);
            transition: all 0.3s ease;
        }

        .btn-accent:hover {
            transform: translateY(-3px);
            box-shadow: 0 15px 30px rgba(99, 102, 241, 0.6);
        }

        .btn-outline-secondary {
            border-color: rgba(255, 255, 255, 0.3);
            color: var(--text);
            background: transparent;
            transition: all 0.3s ease;
        }

        .btn-outline-secondary:hover {
            background: rgba(99, 102, 241, 0.1);
            color: var(--accent);
            transform: translateY(-2px);
        }

        /* Breadcrumb */
        .breadcrumb {
            background: rgba(2, 6, 23, 0.7);
            border-radius: 12px;
            padding: 12px 20px;
            margin-bottom: 30px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.4);
        }

        .breadcrumb a {
            color: var(--primary);
        }

        .breadcrumb .active {
            color: var(--accent);
        }

        /* =================== Movie Cards =================== */
        #movieGrid {
            display: flex;
            flex-wrap: wrap;
        }

        .movie-item .card:hover {
            transform: translateY(-8px) scale(1.02);
            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.7);
        }

        .movie-item .card-img-top {
            height: 600px !important;
            /* same for all posters */
            object-fit: cover !important;
            /* maintain aspect ratio and fill */
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .movie-item .card-title {
            font-weight: 600;
            color: #fff;
            font-size: 18px;
        }

        .movie-item .card-text {
            font-size: 14px;
            color: var(--muted);
        }

        .movie-item .card {
            display: flex;
            flex-direction: column;
            height: 100% !important;
        }

        .movie-item .card-body {
            flex-grow: 1;
            /* Makes description push footer down */
        }

        .movie-item .card-footer {
            margin-top: auto;
            /* Always stick footer at bottom */
        }

        .badge-rating {
            background: linear-gradient(90deg, var(--primary), var(--accent));
            color: #fff;
            border-radius: 12px;
            padding: 4px 10px;
            font-weight: 500;
        }

        /* =================== Search & Filter =================== */
        .search-filter-container {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
        }

        .search-input {
            flex: 1 1 200px;
            border-radius: 50px;
            border: 1px solid rgba(255, 255, 255, 0.1);
            background: rgba(15, 23, 42, 0.8);
            color: #fff;
            padding: 8px 16px;
            transition: all 0.3s ease;
        }

        .search-input::placeholder {
            color: var(--muted);
        }

        .search-input:focus {
            outline: none;
            border-color: var(--primary);
            box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.2);
            background: rgba(15, 23, 42, 0.95);
        }

        .form-select {
            border-radius: 50px;
            background: rgba(15, 23, 42, 0.8);
            border: 1px solid rgba(255, 255, 255, 0.1);
            color: #fff;
            padding: 6px 14px;
            transition: all 0.3s ease;
        }

        .form-select:focus {
            outline: none;
            border-color: var(--accent);
            box-shadow: 0 0 0 4px rgba(34, 211, 238, 0.2);
            background: rgba(15, 23, 42, 0.95);
        }
    </style>
</head>

