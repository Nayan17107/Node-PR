<%- include('../header')%>
    <style>
        /* ===== View Admin Specific Styles ===== */
        :root {
            --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            --success-gradient: linear-gradient(135deg, #42e695 0%, #3bb2b8 100%);
            --danger-gradient: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            --info-gradient: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
            --card-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
            --card-shadow-hover: 0 20px 40px rgba(0, 0, 0, 0.12);
            --transition-smooth: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.1);
            --border-radius: 12px;
            --table-hover: #f8f9ff;
        }

        .page-title {
            background: var(--info-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            font-weight: 700;
            position: relative;
            display: inline-block;
            margin-bottom: 10px;
        }

        .page-title::after {
            content: '';
            position: absolute;
            bottom: -8px;
            left: 0;
            width: 60px;
            height: 4px;
            background: var(--info-gradient);
            border-radius: 2px;
            animation: slideIn 0.8s ease-out;
        }

        @keyframes slideIn {
            from {
                width: 0;
                opacity: 0;
            }

            to {
                width: 60px;
                opacity: 1;
            }
        }

        .card {
            border: none;
            border-radius: var(--border-radius);
            box-shadow: var(--card-shadow);
            overflow: hidden;
            transition: var(--transition-smooth);
            animation: cardAppear 0.6s ease-out;
        }

        .card:hover {
            transform: translateY(-8px);
            box-shadow: var(--card-shadow-hover);
        }

        @keyframes cardAppear {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Table styling */
        .table {
            margin-bottom: 0;
            border-collapse: separate;
            border-spacing: 0;
        }

        .table thead th {
            background: var(--info-gradient);
            color: white;
            border: none;
            font-weight: 600;
            padding: 16px 12px;
            position: relative;
            overflow: hidden;
        }

        .table thead th:first-child {
            border-top-left-radius: var(--border-radius);
        }

        .table thead th:last-child {
            border-top-right-radius: var(--border-radius);
        }

        .table tbody tr {
            transition: var(--transition-smooth);
            position: relative;
        }

        .table tbody tr:hover {
            background-color: var(--table-hover);
            transform: translateX(5px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        }

        .table tbody tr:hover td {
            color: #495057;
        }

        .table tbody td {
            padding: 16px 12px;
            vertical-align: middle;
            border-bottom: 1px solid #f0f0f0;
            transition: var(--transition-smooth);
        }

        .table tbody tr:last-child td {
            border-bottom: none;
        }

        /* Profile image styling */
        .rounded-circle {
            transition: var(--transition-smooth);
            border: 3px solid #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .table tbody tr:hover .rounded-circle {
            transform: scale(1.1);
            border-color: #4facfe;
            box-shadow: 0 6px 12px rgba(79, 172, 254, 0.2);
        }

        /* Button styling */
        .btn-cyan {
            background: var(--info-gradient);
            border: none;
            color: white;
            border-radius: 6px;
            padding: 8px 20px;
            font-weight: 500;
            transition: var(--transition-smooth);
            position: relative;
            overflow: hidden;
        }

        .btn-cyan:hover {
            transform: translateY(-3px);
            box-shadow: 0 7px 14px rgba(79, 172, 254, 0.4);
            color: white;
        }

        .btn-danger {
            background: var(--danger-gradient);
            border: none;
            color: white;
            border-radius: 6px;
            padding: 8px 20px;
            font-weight: 500;
            transition: var(--transition-smooth);
            position: relative;
            overflow: hidden;
        }

        .btn-danger:hover {
            transform: translateY(-3px);
            box-shadow: 0 7px 14px rgba(245, 87, 108, 0.4);
            color: white;
        }

        /* Action buttons container */
        .action-buttons {
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
        }

        /* Stats cards styling */
        .stats-card {
            background: white;
            border-radius: var(--border-radius);
            padding: 25px;
            margin-bottom: 25px;
            box-shadow: var(--card-shadow);
            transition: var(--transition-smooth);
            border-left: 4px solid #4facfe;
        }

        .stats-card:hover {
            transform: translateY(-5px);
            box-shadow: var(--card-shadow-hover);
        }

        .stats-number {
            font-size: 2.5rem;
            font-weight: 700;
            background: var(--info-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 10px;
        }

        .stats-label {
            color: #6c757d;
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        /* Search and filter styling */
        .search-filter-container {
            background: white;
            border-radius: var(--border-radius);
            padding: 20px;
            margin-bottom: 25px;
            box-shadow: var(--card-shadow);
            transition: var(--transition-smooth);
        }

        .search-filter-container:hover {
            box-shadow: var(--card-shadow-hover);
        }

        .search-box {
            position: relative;
        }

        .search-box input {
            padding-left: 45px;
            border-radius: 8px;
            border: 2px solid #e9ecef;
            transition: var(--transition-smooth);
        }

        .search-box input:focus {
            border-color: #4facfe;
            box-shadow: 0 0 0 0.2rem rgba(79, 172, 254, 0.25);
        }

        .search-box i {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #6c757d;
        }

        /* Gender badge styling */
        .gender-badge {
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 500;
            display: inline-block;
            transition: var(--transition-smooth);
        }

        .gender-male {
            background: linear-gradient(135deg, #667eea22 0%, #764ba222 100%);
            color: #667eea;
            border: 1px solid #667eea33;
        }

        .gender-female {
            background: linear-gradient(135deg, #f093fb22 0%, #f5576c22 100%);
            color: #f5576c;
            border: 1px solid #f5576c33;
        }

        .table tbody tr:hover .gender-badge {
            transform: scale(1.05);
        }

        /* Breadcrumb styling */
        .breadcrumb {
            background-color: transparent;
            padding: 0;
        }

        .breadcrumb-item.active {
            color: #4facfe;
            font-weight: 500;
        }

        .breadcrumb-item a {
            color: #6c757d;
            transition: color 0.3s ease;
            text-decoration: none;
        }

        .breadcrumb-item a:hover {
            color: #4facfe;
        }

        /* Animation for table rows */
        .table tbody tr {
            animation: fadeIn 0.5s ease-out;
            animation-fill-mode: both;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateX(-20px);
            }

            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        /* Staggered animation for table rows */
        .table tbody tr:nth-child(1) {
            animation-delay: 0.1s;
        }

        .table tbody tr:nth-child(2) {
            animation-delay: 0.2s;
        }

        .table tbody tr:nth-child(3) {
            animation-delay: 0.3s;
        }

        .table tbody tr:nth-child(4) {
            animation-delay: 0.4s;
        }

        .table tbody tr:nth-child(5) {
            animation-delay: 0.5s;
        }

        .table tbody tr:nth-child(6) {
            animation-delay: 0.6s;
        }

        .table tbody tr:nth-child(7) {
            animation-delay: 0.7s;
        }

        .table tbody tr:nth-child(8) {
            animation-delay: 0.8s;
        }

        .table tbody tr:nth-child(9) {
            animation-delay: 0.9s;
        }

        .table tbody tr:nth-child(10) {
            animation-delay: 1.0s;
        }

        /* Responsive adjustments */
        @media (max-width: 768px) {
            .action-buttons {
                flex-direction: column;
                gap: 8px;
            }

            .btn-cyan,
            .btn-danger {
                width: 100%;
                text-align: center;
            }

            .table thead {
                display: none;
            }

            .table tbody tr {
                display: block;
                margin-bottom: 20px;
                border: 1px solid #e9ecef;
                border-radius: var(--border-radius);
                padding: 15px;
            }

            .table tbody td {
                display: block;
                text-align: right;
                border-bottom: 1px solid #f0f0f0;
                position: relative;
                padding-left: 50%;
            }

            .table tbody td::before {
                content: attr(data-label);
                position: absolute;
                left: 15px;
                width: 45%;
                padding-right: 10px;
                text-align: left;
                font-weight: 600;
                color: #495057;
            }

            .table tbody td:last-child {
                border-bottom: none;
            }
        }
    </style>

    <!-- ============================================================== -->
    <!-- Page wrapper  -->
    <!-- ============================================================== -->
    <div class="page-wrapper">
        <!-- ============================================================== -->
        <!-- Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <div class="page-breadcrumb">
            <div class="row">
                <div class="col-12 d-flex no-block align-items-center">
                    <h4 class="page-title">Administrators Management</h4>
                    <div class="ml-auto text-right">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Administrators</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- End Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Container fluid  -->
        <!-- ============================================================== -->
        <div class="container-fluid">
            <!-- ============================================================== -->
            <!-- Start Page Content -->
            <!-- ============================================================== -->

            <!-- Stats Cards -->
            <div class="row mb-4">
                <div class="col-md-3">
                    <div class="stats-card">
                        <div class="stats-number">
                            <%= admins.length %>
                        </div>
                        <div class="stats-label">Total Administrators</div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stats-card">
                        <div class="stats-number">
                            <%= admins.filter(a=> a.gender === 'Male').length %>
                        </div>
                        <div class="stats-label">Male Admins</div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stats-card">
                        <div class="stats-number">
                            <%= admins.filter(a=> a.gender === 'Female').length %>
                        </div>
                        <div class="stats-label">Female Admins</div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stats-card">
                        <div class="stats-number">
                            <%= new Date().getFullYear() %>
                        </div>
                        <div class="stats-label">Current Year</div>
                    </div>
                </div>
            </div>

            <!-- Search and Filter -->
            <div class="search-filter-container">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <div class="search-box">
                            <i class="fas fa-search"></i>
                            <input type="text" class="form-control" id="adminSearch"
                                placeholder="Search administrators...">
                        </div>
                    </div>
                    <div class="col-md-6 text-right">
                        <a href="/admin/add-admin" class="btn btn-primary">
                            <i class="fas fa-plus-circle mr-2"></i>Add New Admin
                        </a>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="row justify-content-between align-items-center mb-4">
                                <div class="col-md-8">
                                    <h5 class="card-title mb-0">Administrators List</h5>
                                    <p class="text-muted mb-0">Manage all system administrators</p>
                                </div>
                            </div>

                            <div class="table-responsive">
                                <table id="zero_config" class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Profile</th>
                                            <th>Name</th>
                                            <th>Gender</th>
                                            <th>Contact</th>
                                            <th>Email</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% admins.forEach((admin,i)=> {%>
                                            <tr>
                                                <td data-label="Profile">
                                                    <img src="<%=admin.profileImage%>" class="rounded-circle" width="60"
                                                        height="60" alt="<%=admin.firstname%>">
                                                </td>
                                                <td data-label="Name">
                                                    <div class="font-weight-bold">
                                                        <%=admin.firstname%>
                                                            <%=admin.lastname%>
                                                    </div>
                                                    <small class="text-muted">ID: <%=admin.id%></small>
                                                </td>
                                                <td data-label="Gender">
                                                    <span class="gender-badge gender-<%=admin.gender.toLowerCase()%>">
                                                        <i
                                                            class="fas fa-<%=admin.gender === 'Male' ? 'mars' : 'venus'%> mr-1"></i>
                                                        <%=admin.gender%>
                                                    </span>
                                                </td>
                                                <td data-label="Contact">
                                                    <div class="d-flex align-items-center">
                                                        <i class="fas fa-phone-alt text-info mr-2"></i>
                                                        <span>
                                                            <%=admin.contactNo%>
                                                        </span>
                                                    </div>
                                                </td>
                                                <td data-label="Email">
                                                    <div class="d-flex align-items-center">
                                                        <i class="fas fa-envelope text-primary mr-2"></i>
                                                        <span class="text-truncate" style="max-width: 200px;">
                                                            <%=admin.email%>
                                                        </span>
                                                    </div>
                                                </td>
                                                <td data-label="Actions">
                                                    <div class="action-buttons">
                                                        <a href="/admin/edit-admin/<%=admin.id%>"
                                                            class="btn btn-cyan btn-sm" title="Edit Admin">
                                                            <i class="fas fa-edit mr-1"></i>Edit
                                                        </a>
                                                        <a href="/admin/delete-admin/<%=admin.id%>"
                                                            class="btn btn-danger btn-sm"
                                                            onclick="return confirm('Are you sure you want to delete this administrator?')"
                                                            title="Delete Admin">
                                                            <i class="fas fa-trash-alt mr-1"></i>Delete
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>
                                            <%})%>
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

            <!-- No Results Message (hidden by default) -->
            <div class="row d-none" id="noResults">
                <div class="col-12">
                    <div class="card text-center py-5">
                        <div class="card-body">
                            <i class="fas fa-users fa-3x text-muted mb-3"></i>
                            <h4 class="text-muted">No administrators found</h4>
                            <p class="text-muted">Try adjusting your search criteria</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- ============================================================== -->
            <!-- End PAge Content -->
            <!-- ============================================================== -->
        </div>
        <!-- ============================================================== -->
        <!-- End Container fluid  -->
        <!-- ============================================================== -->

        <!-- JavaScript for Search Functionality -->
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                const searchInput = document.getElementById('adminSearch');
                const tableRows = document.querySelectorAll('tbody tr');
                const noResults = document.getElementById('noResults');

                searchInput.addEventListener('keyup', function () {
                    const searchTerm = this.value.toLowerCase();
                    let visibleRows = 0;

                    tableRows.forEach(row => {
                        const text = row.textContent.toLowerCase();
                        if (text.includes(searchTerm)) {
                            row.style.display = '';
                            visibleRows++;
                        } else {
                            row.style.display = 'none';
                        }
                    });

                    // Show/hide no results message
                    if (visibleRows === 0 && searchTerm.length > 0) {
                        noResults.classList.remove('d-none');
                    } else {
                        noResults.classList.add('d-none');
                    }
                });

                // Add click animation to buttons
                document.querySelectorAll('.btn').forEach(button => {
                    button.addEventListener('click', function (e) {
                        this.style.transform = 'translateY(-1px)';
                        setTimeout(() => {
                            this.style.transform = '';
                        }, 150);
                    });
                });
            });
        </script>
        <%- include('../footer')%>