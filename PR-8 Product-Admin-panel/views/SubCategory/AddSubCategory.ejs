<%- include('../header') %>
    <style>
        :root {
            --primary-gradient: linear-gradient(135deg, #0f4c81 0%, #3b82f6 100%);
            --surface: #ffffff;
            --border-soft: #e5e7eb;
            --text-main: #1f2937;
            --shadow: 0 12px 34px rgba(15, 76, 129, 0.12);
        }

        .page-wrapper {
            background: linear-gradient(180deg, #f8fbff 0%, #eef4ff 100%);
        }

        .page-title {
            font-weight: 800;
            background: var(--primary-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .layout-card {
            background: var(--surface);
            border: 1px solid var(--border-soft);
            border-radius: 14px;
            box-shadow: var(--shadow);
            overflow: hidden;
        }

        .form-horizontal {
            padding: 24px 20px;
        }

        .section-title {
            font-size: 1.1rem;
            font-weight: 700;
            color: var(--text-main);
            text-align: center;
            margin-bottom: 24px;
        }

        .form-group.row {
            margin-bottom: 20px;
            align-items: center;
        }

        .form-control {
            border: 2px solid var(--border-soft);
            border-radius: 10px;
            height: 46px;
            padding: 10px 14px;
            color: var(--text-main);
            background: #fcfdff;
            transition: 0.25s ease;
        }

        .form-control:focus {
            border-color: #3b82f6;
            box-shadow: 0 0 0 0.2rem rgba(59, 130, 246, 0.18);
            background: #fff;
        }

        label.control-label {
            font-weight: 700;
            color: #374151;
            margin-bottom: 0;
        }

        .submit-wrap {
            border-top: 1px solid var(--border-soft);
            padding-top: 20px;
        }

        .btn-primary {
            border: none;
            border-radius: 10px;
            padding: 11px 30px;
            font-weight: 700;
            letter-spacing: .2px;
            background: var(--primary-gradient);
        }

        .btn-primary:hover {
            transform: translateY(-1px);
            box-shadow: 0 8px 18px rgba(37, 99, 235, 0.28);
        }

        @media (max-width: 768px) {
            .btn-primary {
                width: 100%;
            }

            label.control-label {
                margin-bottom: 8px;
            }
        }
    </style>

    <div class="page-wrapper">
        <div class="page-breadcrumb">
            <div class="row">
                <div class="col-12 d-flex no-block align-items-center">
                    <h4 class="page-title">Add Sub Category</h4>
                    <div class="ml-auto text-right">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Add Sub Category</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>

        <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="col-md-10 col-lg-8">
                    <div class="layout-card">
                        <form class="form-horizontal" action="/subcategory/add-subcategory" method="post">
                            <div class="card-body">
                                <h4 class="section-title">Sub Category Details</h4>

                                <div class="form-group row">
                                    <label class="col-sm-3 text-right control-label col-form-label">Category</label>
                                    <div class="col-sm-9">
                                        <select class="form-control" name="categoryid" required>
                                            <option value="">Select category</option>
                                            <% category.forEach((cate)=> { %>
                                                <option value="<%= cate.id %>">
                                                    <%= cate.categoryname %>
                                                </option>
                                                <% }) %>
                                        </select>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-sm-3 text-right control-label col-form-label">Sub Category
                                        Name</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" name="subcategoryname"
                                            placeholder="Enter sub category name" required>
                                    </div>
                                </div>
                            </div>

                            <div class="submit-wrap text-center">
                                <div class="card-body pt-0">
                                    <button type="submit" class="btn btn-primary">Add Sub Category</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../footer') %>