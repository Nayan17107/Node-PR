<%- include('../header') %>

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    .page-wrapper {
        min-height: 100vh;
        padding: 36px 20px;
        background: linear-gradient(145deg, #eef3ff 0%, #f8fbff 45%, #ffffff 100%);
    }

    .container-fluid {
        max-width: 1280px;
        margin: 0 auto;
    }

    .page-breadcrumb {
        margin-bottom: 28px;
        animation: slideDown 0.45s ease-out;
    }

    .page-title {
        font-size: 2rem;
        font-weight: 700;
        color: #1f2a56;
        letter-spacing: 0.3px;
    }

    .subtitle {
        margin-top: 6px;
        color: #52608e;
        font-size: 0.95rem;
    }

    .extra-grid {
        row-gap: 24px;
    }

    .extra-card {
        height: 100%;
        border: 1px solid #e3eaf9;
        border-radius: 16px;
        background: #ffffff;
        box-shadow: 0 10px 30px rgba(37, 76, 171, 0.08);
        overflow: hidden;
        transition: transform 0.25s ease, box-shadow 0.25s ease;
        animation: fadeUp 0.5s ease-out;
    }

    .extra-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 14px 36px rgba(37, 76, 171, 0.16);
    }

    .extra-card .thumb {
        width: 100%;
        height: 170px;
        background: #f2f6ff;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
    }

    .extra-card .thumb img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .extra-card .card-body {
        padding: 18px 18px 16px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        height: calc(100% - 170px);
        gap: 14px;
    }

    .card-meta {
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .meta-item {
        background: #f7f9ff;
        border: 1px solid #e7edff;
        border-radius: 10px;
        padding: 10px 12px;
    }

    .meta-label {
        display: block;
        font-size: 11px;
        text-transform: uppercase;
        letter-spacing: 0.7px;
        color: #6474ad;
        margin-bottom: 4px;
        font-weight: 600;
    }

    .meta-value {
        font-size: 15px;
        font-weight: 600;
        color: #1f2a56;
        line-height: 1.35;
        word-break: break-word;
    }

    .btn-actions {
        display: flex;
        gap: 8px;
    }

    .btn-actions .btn {
        flex: 1;
        border-radius: 9px;
        font-weight: 600;
        font-size: 13px;
        padding: 9px 10px;
        border: 0;
        transition: all 0.2s ease;
    }

    .btn-edit {
        background: #ffb648;
        color: #232323;
    }

    .btn-edit:hover {
        background: #ffa92a;
        color: #232323;
        text-decoration: none;
        transform: translateY(-1px);
    }

    .btn-delete {
        background: #f05d5e;
        color: #ffffff;
    }

    .btn-delete:hover {
        background: #e54849;
        color: #ffffff;
        text-decoration: none;
        transform: translateY(-1px);
    }

    .empty-state {
        border: 1px dashed #cdd9fb;
        border-radius: 14px;
        background: #f8faff;
        padding: 26px;
        text-align: center;
        color: #4b5f96;
        animation: fadeUp 0.5s ease-out;
    }

    .empty-state p {
        margin: 0;
        font-size: 15px;
        font-weight: 500;
    }

    .empty-state a {
        display: inline-block;
        margin-top: 10px;
        font-weight: 700;
        color: #2f56c7;
        text-decoration: none;
    }

    .empty-state a:hover {
        text-decoration: underline;
    }

    @keyframes slideDown {
        from {
            opacity: 0;
            transform: translateY(-14px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @keyframes fadeUp {
        from {
            opacity: 0;
            transform: translateY(14px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @media (max-width: 767px) {
        .page-wrapper {
            padding: 28px 14px;
        }

        .page-title {
            font-size: 1.6rem;
        }

        .subtitle {
            font-size: 0.9rem;
        }

        .extra-card .thumb {
            height: 155px;
        }

        .extra-card .card-body {
            height: calc(100% - 155px);
        }
    }
</style>

<div class="page-wrapper">
    <div class="container-fluid">
        <div class="page-breadcrumb">
            <h4 class="page-title">All Extra Categories</h4>
            <p class="subtitle">Manage extra category records from one place.</p>
        </div>

        <div class="row extra-grid">
            <% if (extracategories && extracategories.length > 0) { %>
                <% extracategories.forEach((extracategory) => { %>
                    <div class="col-lg-3 col-md-4 col-sm-6 col-12">
                        <div class="extra-card">
                            <div class="thumb">
                                <img src="<%= extracategory.categoryid.categoryimage %>" alt="category image">
                            </div>
                            <div class="card-body">
                                <div class="card-meta">
                                    <div class="meta-item">
                                        <span class="meta-label">Category</span>
                                        <div class="meta-value"><%= extracategory.categoryid.categoryname %></div>
                                    </div>
                                    <div class="meta-item">
                                        <span class="meta-label">Sub Category</span>
                                        <div class="meta-value"><%= extracategory.subcategoryid.subcategoryname %></div>
                                    </div>
                                    <div class="meta-item">
                                        <span class="meta-label">Extra Category</span>
                                        <div class="meta-value"><%= extracategory.extracategoryname %></div>
                                    </div>
                                </div>

                                <div class="btn-actions">
                                    <a href="/extracategory/edit-extracategory/<%= extracategory.id %>" class="btn btn-edit">Edit</a>
                                    <a href="/extracategory/delete-extracategory/<%= extracategory.id %>" class="btn btn-delete">Delete</a>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="col-12">
                    <div class="empty-state">
                        <p>No extra categories found.</p>
                        <a href="/extracategory/add-extracategory">Create your first extra category</a>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</div>

<%- include('../footer') %>
