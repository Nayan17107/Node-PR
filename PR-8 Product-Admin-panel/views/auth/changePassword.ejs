<%- include('../header') %>

<div class="page-wrapper">
    <div class="page-breadcrumb">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h4 class="page-title">Change Password</h4>
                <p class="page-subtitle">Update your account credentials to keep your profile secure.</p>
            </div>
            <div class="col-md-4 text-md-right mt-3 mt-md-0">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Change Password</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-9 col-lg-7">
                <div class="card dashboard-panel">
                    <form class="form-horizontal" action="/user/change-password" method="post">
                        <div class="card-body">
                            <h5 class="panel-title mb-4">Password Details</h5>
                            <div class="form-group row">
                                <label class="col-sm-4 text-right control-label col-form-label">Old Password</label>
                                <div class="col-sm-8">
                                    <input type="password" class="form-control" name="oldpassword"
                                        placeholder="Enter old password">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-4 text-right control-label col-form-label">New Password</label>
                                <div class="col-sm-8">
                                    <input type="password" class="form-control" name="newpassword"
                                        placeholder="Enter new password">
                                </div>
                            </div>
                            <div class="form-group row mb-0">
                                <label class="col-sm-4 text-right control-label col-form-label">Confirm Password</label>
                                <div class="col-sm-8">
                                    <input class="form-control" name="confirmpassword"
                                        placeholder="Confirm new password">
                                </div>
                            </div>
                        </div>
                        <div class="border-top text-center">
                            <div class="card-body">
                                <button type="submit" class="btn btn-primary px-4">Change Password</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <%- include('../footer') %>
