<%- include('../header') %>
    <style>
        :root {
            --primary-gradient: linear-gradient(135deg, #0f4c81 0%, #3b82f6 100%);
            --surface: #ffffff;
            --border-soft: #e5e7eb;
            --text-main: #1f2937;
            --text-soft: #6b7280;
            --shadow: 0 12px 34px rgba(15, 76, 129, 0.12);
        }

        .page-title {
            font-weight: 800;
            background: var(--primary-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .page-wrapper {
            background: linear-gradient(180deg, #f8fbff 0%, #eef4ff 100%);
        }

        .layout-card {
            background: var(--surface);
            border: 1px solid var(--border-soft);
            border-radius: 14px;
            box-shadow: var(--shadow);
            overflow: hidden;
        }

        .form-horizontal {
            padding: 24px 20px;
        }

        .section-title {
            font-size: 1.1rem;
            font-weight: 700;
            color: var(--text-main);
            text-align: center;
            margin-bottom: 24px;
        }

        .form-group.row {
            margin-bottom: 20px;
            align-items: center;
        }

        .form-control {
            border: 2px solid var(--border-soft);
            border-radius: 10px;
            height: 46px;
            padding: 10px 14px;
            color: var(--text-main);
            background: #fcfdff;
            transition: 0.25s ease;
        }

        .form-control:focus {
            border-color: #3b82f6;
            box-shadow: 0 0 0 0.2rem rgba(59, 130, 246, 0.18);
            background: #fff;
        }

        .form-control:disabled {
            background: #f3f4f6;
            color: #9ca3af;
        }

        label.control-label {
            font-weight: 700;
            color: #374151;
            margin-bottom: 0;
        }

        .custom-control {
            margin-right: 20px;
        }

        .custom-control-label {
            font-weight: 600;
            color: #4b5563;
        }

        .custom-control-input:checked~.custom-control-label::before {
            border-color: #2563eb;
            background-color: #2563eb;
        }

        .img-preview {
            width: 120px;
            height: 120px;
            border-radius: 10px;
            object-fit: cover;
            border: 2px solid #dbeafe;
            box-shadow: 0 8px 16px rgba(59, 130, 246, 0.14);
        }

        .submit-wrap {
            border-top: 1px solid var(--border-soft);
            padding-top: 20px;
        }

        .btn-primary {
            border: none;
            border-radius: 10px;
            padding: 11px 30px;
            font-weight: 700;
            letter-spacing: .2px;
            background: var(--primary-gradient);
        }

        .btn-primary:hover {
            transform: translateY(-1px);
            box-shadow: 0 8px 18px rgba(37, 99, 235, 0.28);
        }

        .hint {
            color: var(--text-soft);
            font-size: .82rem;
        }

        @media (max-width: 768px) {
            .btn-primary {
                width: 100%;
            }

            label.control-label {
                margin-bottom: 8px;
            }
        }
    </style>

    <div class="page-wrapper">
        <div class="page-breadcrumb">
            <div class="row">
                <div class="col-12 d-flex no-block align-items-center">
                    <h4 class="page-title">Update Administrator</h4>
                    <div class="ml-auto text-right">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Update Admin</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>

        <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="col-md-10 col-lg-8">
                    <div class="layout-card">
                        <form class="form-horizontal" action="/admin/update-admin/<%=admin.id%>" method="post"
                            enctype="multipart/form-data">
                            <div class="card-body">
                                <h4 class="section-title">Administrator Details</h4>

                                <div class="form-group row">
                                    <label for="fname" class="col-sm-3 text-right control-label col-form-label">First
                                        Name</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" value="<%=admin.firstname%>" id="fname"
                                            name="firstname" placeholder="First name" required>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="lname" class="col-sm-3 text-right control-label col-form-label">Last
                                        Name</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" value="<%=admin.lastname%>" id="lname"
                                            name="lastname" placeholder="Last name" required>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="email"
                                        class="col-sm-3 text-right control-label col-form-label">Email</label>
                                    <div class="col-sm-9">
                                        <input type="email" class="form-control" value="<%=admin.email%>" id="email"
                                            name="email" placeholder="name@example.com" required>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="password"
                                        class="col-sm-3 text-right control-label col-form-label">Password</label>
                                    <div class="col-sm-9">
                                        <input type="password" disabled class="form-control" value="<%=admin.password%>"
                                            id="password" name="password">
                                        <small class="hint">Password cannot be edited for security reasons.</small>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-sm-3 text-right control-label col-form-label">Gender</label>
                                    <div class="col-sm-9 d-flex align-items-center">
                                        <div class="custom-control custom-radio">
                                            <input type="radio" class="custom-control-input" name="gender"
                                                id="customControlValidation1" <%=admin.gender=="Male" ? "checked" : ""
                                                %> value="Male" required>
                                            <label class="custom-control-label"
                                                for="customControlValidation1">Male</label>
                                        </div>
                                        <div class="custom-control custom-radio">
                                            <input type="radio" class="custom-control-input" name="gender"
                                                id="customControlValidation2" <%=admin.gender=="Female" ? "checked" : ""
                                                %> value="Female" required>
                                            <label class="custom-control-label"
                                                for="customControlValidation2">Female</label>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="contactNo"
                                        class="col-sm-3 text-right control-label col-form-label">Contact No</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" id="contactNo"
                                            value="<%=admin.contactNo%>" name="contactNo" placeholder="Contact number"
                                            required>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="profileImage"
                                        class="col-sm-3 text-right control-label col-form-label">Profile Image</label>
                                    <div class="col-sm-9">
                                        <input type="file" class="form-control" id="profileImage" name="profileImage"
                                            accept="image/*">
                                        <% if (admin.profileImage) { %>
                                            <div class="mt-3">
                                                <p class="mb-2">Current Image:</p>
                                                <img src="<%=admin.profileImage%>" class="img-preview"
                                                    alt="Profile Image">
                                            </div>
                                            <% } %>
                                    </div>
                                </div>
                            </div>

                            <div class="submit-wrap text-center">
                                <div class="card-body pt-0">
                                    <button type="submit" class="btn btn-primary">Update Administrator</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../footer') %>