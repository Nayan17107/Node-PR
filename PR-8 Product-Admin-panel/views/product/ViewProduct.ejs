<%- include('../header') %>

<style>
    :root {
        --bg-main: linear-gradient(135deg, #f7f9fc 0%, #eef3ff 100%);
        --card-bg: #ffffff;
        --title-grad: linear-gradient(135deg, #0f4c81 0%, #3b82f6 100%);
        --text-main: #1f2937;
        --text-soft: #6b7280;
        --border-soft: #e5e7eb;
        --shadow-soft: 0 10px 28px rgba(15, 76, 129, 0.12);
        --shadow-hover: 0 20px 40px rgba(59, 130, 246, 0.2);
    }

    .page-wrapper {
        min-height: 100vh;
        background: var(--bg-main);
    }

    .page-title {
        font-size: 2rem;
        font-weight: 800;
        background: var(--title-grad);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .sub-title {
        color: var(--text-soft);
        font-weight: 500;
        margin-top: 6px;
    }

    .filter-card {
        border: 1px solid var(--border-soft);
        border-radius: 14px;
        background: var(--card-bg);
        box-shadow: var(--shadow-soft);
        padding: 16px;
    }

    .filter-label {
        font-size: 0.82rem;
        color: #475569;
        font-weight: 700;
        margin-bottom: 4px;
        display: inline-block;
    }

    .filter-control {
        border: 2px solid #e9ecef;
        border-radius: 8px;
        font-size: 14px;
        height: 42px;
        background: #fcfcfc;
        transition: 0.2s ease;
    }

    .filter-control:focus {
        border-color: #3b82f6;
        box-shadow: 0 0 0 0.2rem rgba(59, 130, 246, 0.18);
        background: #fff;
    }

    .btn-filter,
    .btn-reset {
        border: none;
        border-radius: 8px;
        padding: 9px 14px;
        font-size: 0.84rem;
        font-weight: 700;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 100%;
    }

    .btn-filter {
        color: #fff;
        background: var(--title-grad);
    }

    .btn-reset {
        color: #334155;
        background: #e2e8f0;
    }

    .product-grid {
        margin-top: 20px;
    }

    .product-card {
        border: 1px solid var(--border-soft);
        border-radius: 14px;
        overflow: hidden;
        background: var(--card-bg);
        box-shadow: var(--shadow-soft);
        transition: all 0.3s ease;
        height: 100%;
        display: flex;
        flex-direction: column;
    }

    .product-card:hover {
        transform: translateY(-6px);
        box-shadow: var(--shadow-hover);
    }

    .product-image {
        width: 100%;
        height: 210px;
        background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        position: relative;
    }

    .product-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .no-image {
        color: #1e3a8a;
        font-weight: 700;
        letter-spacing: 0.4px;
    }

    .product-body {
        padding: 18px;
        display: flex;
        flex-direction: column;
        flex: 1;
    }

    .product-name {
        color: var(--text-main);
        font-size: 1.05rem;
        font-weight: 700;
        margin-bottom: 12px;
        line-height: 1.35;
        min-height: 44px;
    }

    .meta-line {
        color: var(--text-soft);
        font-size: 0.9rem;
        margin-bottom: 7px;
    }

    .meta-line strong {
        color: #334155;
        font-weight: 700;
    }

    .price-row {
        display: flex;
        align-items: center;
        gap: 8px;
        margin: 12px 0 8px;
        flex-wrap: wrap;
    }

    .price-main {
        color: #065f46;
        font-size: 1.1rem;
        font-weight: 800;
    }

    .price-discount {
        color: #b91c1c;
        font-size: 0.9rem;
        font-weight: 700;
        background: #fee2e2;
        border-radius: 50px;
        padding: 3px 10px;
    }

    .product-actions {
        margin-top: auto;
        display: flex;
        gap: 8px;
        flex-wrap: wrap;
    }

    .btn-card {
        border: none;
        border-radius: 8px;
        padding: 8px 14px;
        font-size: 0.82rem;
        font-weight: 700;
        text-decoration: none;
        cursor: pointer;
        transition: all 0.2s ease;
    }

    .btn-card:hover {
        transform: translateY(-2px);
        text-decoration: none;
    }

    .btn-view {
        color: #fff;
        background: #2563eb;
    }

    .btn-edit {
        color: #fff;
        background: #f59e0b;
    }

    .btn-delete {
        color: #fff;
        background: #ef4444;
    }

    .empty-state {
        border: 1px dashed #c7d2fe;
        background: #eef2ff;
        border-radius: 14px;
        padding: 28px;
        text-align: center;
        color: #3730a3;
        font-weight: 600;
    }

    @media (max-width: 768px) {
        .page-title {
            font-size: 1.5rem;
        }

        .product-image {
            height: 190px;
        }
    }
</style>

<div class="page-wrapper">
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
                <div>
                    <h4 class="page-title">All Products</h4>
                    <p class="sub-title">Search, filter, and sort products by category structure and rating.</p>
                </div>
                <div class="ml-auto text-right">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                            <li class="breadcrumb-item active" aria-current="page">View Product</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <form id="productFilterForm" class="filter-card" method="get" action="/product/view-product">
            <div class="row">
                <div class="col-lg-4 col-md-6 mb-3">
                    <label class="filter-label">Search Product Name</label>
                    <input id="liveSearch" class="form-control filter-control" type="text" name="search" value="<%= filters.search || '' %>" placeholder="Type product name...">
                </div>

                <div class="col-lg-2 col-md-6 mb-3">
                    <label class="filter-label">Category</label>
                    <select class="form-control filter-control" id="categoryid" name="categoryid">
                        <option value="">All</option>
                        <% categories.forEach((cat) => { %>
                            <option value="<%= cat._id %>" <%= String(filters.categoryid || '') === String(cat._id) ? 'selected' : '' %>><%= cat.categoryname %></option>
                        <% }) %>
                    </select>
                </div>

                <div class="col-lg-2 col-md-6 mb-3">
                    <label class="filter-label">Sub Category</label>
                    <select class="form-control filter-control" id="subcategoryid" name="subcategoryid">
                        <option value="">All</option>
                        <% subcategories.forEach((subcat) => { %>
                            <option value="<%= subcat._id %>" <%= String(filters.subcategoryid || '') === String(subcat._id) ? 'selected' : '' %>><%= subcat.subcategoryname %></option>
                        <% }) %>
                    </select>
                </div>

                <div class="col-lg-2 col-md-6 mb-3">
                    <label class="filter-label">Extra Category</label>
                    <select class="form-control filter-control" id="extracategoryid" name="extracategoryid">
                        <option value="">All</option>
                        <% extracategories.forEach((excat) => { %>
                            <option value="<%= excat._id %>" <%= String(filters.extracategoryid || '') === String(excat._id) ? 'selected' : '' %>><%= excat.extracategoryname %></option>
                        <% }) %>
                    </select>
                </div>

                <div class="col-lg-2 col-md-6 mb-3">
                    <label class="filter-label">Sort By</label>
                    <select class="form-control filter-control" name="sort">
                        <option value="">Default</option>
                        <option value="category_az" <%= filters.sort === 'category_az' ? 'selected' : '' %>>Category A-Z</option>
                        <option value="subcategory_az" <%= filters.sort === 'subcategory_az' ? 'selected' : '' %>>Sub Category A-Z</option>
                        <option value="extracategory_az" <%= filters.sort === 'extracategory_az' ? 'selected' : '' %>>Extra Category A-Z</option>
                        <option value="rating_high" <%= filters.sort === 'rating_high' ? 'selected' : '' %>>Rating High-Low</option>
                        <option value="rating_low" <%= filters.sort === 'rating_low' ? 'selected' : '' %>>Rating Low-High</option>
                    </select>
                </div>

                <div class="col-lg-1 col-md-6 mb-3 align-self-end">
                    <button type="submit" class="btn-filter">Apply</button>
                </div>

                <div class="col-lg-1 col-md-6 mb-3 align-self-end">
                    <a href="/product/view-product" class="btn-reset">Reset</a>
                </div>
            </div>
        </form>

        <div class="row product-grid">
            <% if (products && products.length > 0) { %>
                <% products.forEach((product) => { %>
                    <div class="col-xl-3 col-lg-4 col-md-6 col-sm-12 mb-4">
                        <div class="product-card">
                            <div class="product-image">
                                <% if (product.image) { %>
                                    <img src="<%= product.image %>" alt="<%= product.productname %>">
                                <% } else { %>
                                    <span class="no-image">NO IMAGE</span>
                                <% } %>
                            </div>

                            <div class="product-body">
                                <h5 class="product-name"><%= product.productname %></h5>

                                <p class="meta-line"><strong>Category:</strong> <%= product.categoryid && product.categoryid.categoryname ? product.categoryid.categoryname : '-' %></p>
                                <p class="meta-line"><strong>Sub Category:</strong> <%= product.subcategoryid && product.subcategoryid.subcategoryname ? product.subcategoryid.subcategoryname : '-' %></p>
                                <p class="meta-line"><strong>Extra Category:</strong> <%= product.extracategoryid && product.extracategoryid.extracategoryname ? product.extracategoryid.extracategoryname : '-' %></p>
                                <p class="meta-line"><strong>Stock:</strong> <%= product.stock %> | <strong>Rating:</strong> <%= product.rating %></p>

                                <div class="price-row">
                                    <span class="price-main">Rs. <%= product.price %></span>
                                    <% if (product.discountprice && product.discountprice > 0) { %>
                                        <span class="price-discount">Discount Rs. <%= product.discountprice %></span>
                                    <% } %>
                                </div>

                                <div class="product-actions">
                                    <a href="/product/view-single-product/<%= product.id %>" class="btn-card btn-view">View Product</a>
                                    <a href="/product/edit-product/<%= product.id %>" class="btn-card btn-edit">Edit</a>
                                    <a href="/product/delete-product/<%= product.id %>" class="btn-card btn-delete">Delete</a>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="col-12">
                    <div class="empty-state">
                        No products found for selected filters.
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</div>
<script>
    const categoryFilter = document.getElementById('categoryid');
    const subCategoryFilter = document.getElementById('subcategoryid');
    const extraCategoryFilter = document.getElementById('extracategoryid');

    if (categoryFilter && subCategoryFilter && extraCategoryFilter) {
        categoryFilter.addEventListener('change', () => {
            subCategoryFilter.value = '';
            extraCategoryFilter.value = '';
        });

        subCategoryFilter.addEventListener('change', () => {
            extraCategoryFilter.value = '';
        });
    }

    const productFilterForm = document.getElementById('productFilterForm');
    const liveSearch = document.getElementById('liveSearch');

    if (productFilterForm && liveSearch) {
        const productCards = Array.from(document.querySelectorAll('.product-grid .col-xl-3, .product-grid .col-lg-4, .product-grid .col-md-6, .product-grid .col-sm-12')).filter((el) => el.querySelector('.product-name'));

        let emptySearchState = document.getElementById('emptySearchState');
        if (!emptySearchState) {
            emptySearchState = document.createElement('div');
            emptySearchState.id = 'emptySearchState';
            emptySearchState.className = 'col-12 d-none';
            emptySearchState.innerHTML = '<div class="empty-state">No products found for this search.</div>';
            const grid = document.querySelector('.product-grid');
            if (grid) grid.appendChild(emptySearchState);
        }

        const applyLiveSearch = () => {
            const q = String(liveSearch.value || '').toLowerCase().trim();
            let visibleCount = 0;

            productCards.forEach((cardCol) => {
                const nameEl = cardCol.querySelector('.product-name');
                const name = String(nameEl ? nameEl.textContent : '').toLowerCase();
                const show = q === '' || name.includes(q);
                cardCol.style.display = show ? '' : 'none';
                if (show) visibleCount++;
            });

            if (emptySearchState) {
                emptySearchState.classList.toggle('d-none', visibleCount !== 0);
            }
        };

        let searchTimer;
        liveSearch.addEventListener('input', () => {
            clearTimeout(searchTimer);
            searchTimer = setTimeout(applyLiveSearch, 120);
        });

        applyLiveSearch();
    }
</script>

<%- include('../footer') %>
